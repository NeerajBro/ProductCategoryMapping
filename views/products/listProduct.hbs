<table class="table table-striped">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Product Des</th>
            <th>Price</th>
            <th>Categories</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.productName}}</td>
            <td>{{this.productDes}}</td>
            <td>{{this.price}}</td>
            <td>
                {{this.categoryName}}
            </td>
            <td>
                <a href="/product/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/product/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i
                        class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>